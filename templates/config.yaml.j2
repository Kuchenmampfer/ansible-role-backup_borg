#jinja2: lstrip_blocks: "True", trim_blocks: "True"

location:
  source_directories: {{ placeholder_backup_borg_location_source_directories|to_json }}
  repositories: {{ placeholder_backup_borg_location_repositories|to_json }}
  one_file_system: true
  exclude_patterns: {{ placeholder_backup_borg_location_exclude_patterns|to_json }}

storage:
  compression: {{ placeholder_backup_borg_storage_compression|to_json }}
  ssh_command: {{ placeholder_backup_borg_storage_ssh_command|to_json }}
  archive_name_format: {{ placeholder_backup_borg_storage_archive_name_format|to_json }}
  encryption_passphrase: {{ placeholder_backup_borg_storage_encryption_passphrase|to_json }}
  unknown_unencrypted_repo_access_is_ok: {{ placeholder_backup_borg_unknown_unencrypted_repo_access_is_ok|to_json }}

retention:
  keep_hourly: {{ placeholder_backup_borg_retention_keep_hourly|to_json }}
  keep_daily: {{ placeholder_backup_borg_retention_keep_daily|to_json }}
  keep_weekly: {{ placeholder_backup_borg_retention_keep_weekly|to_json }}
  keep_monthly: {{ placeholder_backup_borg_retention_keep_monthly|to_json }}
  keep_yearly: {{ placeholder_backup_borg_retention_keep_yearly|to_json }}
  prefix: {{ placeholder_backup_borg_retention_prefix|to_json }}

consistency:
  checks:
    - repository
    - archives

hooks:
{% if placeholder_backup_borg_postgresql_enabled and placeholder_backup_borg_postgresql_databases|length > 0 %}
  postgresql_databases:
  {% for database in placeholder_backup_borg_postgresql_databases %}
  - name: {{ database|to_json }}
    hostname: {{ placeholder_backup_borg_postgresql_databases_hostname|to_json }}
    username: {{ placeholder_backup_borg_postgresql_databases_username|to_json }}
    password: {{ placeholder_backup_borg_postgresql_databases_password|to_json }}
    port: {{ placeholder_backup_borg_postgresql_databases_port | int | to_json }}
  {% endfor %}
{% endif %}
  after_backup:
    - echo "Backup created."
  on_error:
    - echo "Error while creating a backup."
